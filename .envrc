# Project-local environment for ai_app
# Loaded automatically when entering this repo.

# Add this line to auto-activate venv
source .venv/bin/activate

# Add repo's scripts folder to PATH (so we can run generate_context from anywhere)
PATH_add scripts

# Ensure Python modules under src/ are importable
export PYTHONPATH=$(pwd)/src

# Optional default for context outputs
export CONTEXT_REPORTS_DIR=$(pwd)/context_reports

echo "AI_APP environment active (PATH patched, PYTHONPATH set)"
